{
  "manifest_version": 2,
  "name": "Hyperfocus",
  "version": "1.0",
  "description": "Helps you focus by disabling hyperlinks not on whitelisted pages.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["service_worker.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      // TODO: add
      // "16": "icon16.png",
      // "32": "icon32.png",
      // "48": "icon48.png",
      // "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "popup.html",
    "style.css",
    "popup.js"
  ]
}


